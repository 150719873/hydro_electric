<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.hydroelectric_backend.Dao.hydro.UserMapper">
    <!--mapper接口所在包-->

    <select id="findAllUsers" resultType="com.hust.hydroelectric_backend.Entity.User">
        SELECT
          *
        FROM
          t_user
        where
          enprNo = #{enprNo}
    </select>

    <select id="findByUid" resultType="com.hust.hydroelectric_backend.Entity.User">
        SELECT
          u_name
        FROM
          t_user
        where
          u_id = #{uid}
    </select>

    <select id="findAllUserNo" resultType="java.lang.String">
        select
          user_no
        from
          t_user
        where
          enprNo = #{enprNo}
    </select>

    <insert id="saveUser" parameterType="com.hust.hydroelectric_backend.Entity.User">
        insert into
          t_user(
            u_name,
            u_tel,
            b_id,
            address,
            account_balance,
            u_no,
            enprNo
          ) values (
            #{uName},
            #{uTel},
            #{bId},
            #{address},
            #{accountBalance},
            #{uNo},
            #{enprNo}
          )
    </insert>

    <select id="findUidByUnoAndEnprno" resultType="java.lang.Integer">
        select
          u_id
        from
          t_user
        where
          u_no = #{uNo}
          and enprNo = #{enprNo}
    </select>

    <update id="delUserByUid" parameterType="java.lang.Integer">
        update
          t_user
        set
          is_delete = 1
        where
          u_id = #{uid}
    </update>

    <update id="uptUser" parameterType="com.hust.hydroelectric_backend.Entity.User">
        update
          t_user
        <set>
            <if test="uName !=null"> ,u_name = #{uName}</if>
            <if test="uTel !=null"> ,u_tel = #{uTel}</if>
            <if test="bId !=null"> ,b_id = #{bId}</if>
            <if test="address !=null"> ,address = #{address}</if>
            <if test="accountBalance !=null"> ,account_balance = #{accountBalance}</if>
            <if test="uNo !=null"> ,u_no = #{uNo}</if>
            <if test="enprNo !=null"> ,enprNo = #{enprNo}</if>
        </set>
        where
          u_id = #{uId}
          and is_delete = 0
    </update>

    <select id="findUidsByBid" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        select
          u_id
        from
          t_user
        where
          b_id = #{bId}
          and is_delete = 0
    </select>

</mapper>
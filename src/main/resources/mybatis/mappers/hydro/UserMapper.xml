<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.hydroelectric_backend.Dao.hydro.UserMapper">
    <!--mapper接口所在包-->

    <select id="findAllUsers" resultType="com.hust.hydroelectric_backend.Entity.User">
        SELECT
          *
        FROM
          t_user
        where
          enprNo = #{enprNo}
    </select>

    <select id="findByUid" resultType="com.hust.hydroelectric_backend.Entity.User">
        SELECT
          u_name
        FROM
          t_user
        where
          u_id = #{uid}
    </select>

    <select id="findAllUserNo" resultType="java.lang.String">
        select
          user_no
        from
          t_user
        where
          enprNo = #{enprNo}
    </select>

    <insert id="saveUser" parameterType="com.hust.hydroelectric_backend.Entity.User">
        insert into
          t_user(
            u_name,
            u_tel,
            b_id,
            address,
            account_balance,
            u_no,
            enprNo
          ) values (
            #{uName},
            #{uTel},
            #{bId},
            #{address},
            #{accountBalance},
            #{uNo},
            #{enprNo}
          )
    </insert>

    <select id="findUidByUnoAndEnprno" resultType="java.lang.Integer">
        select
          u_id
        from
          t_user
        where
          u_no = #{uNo}
          and enprNo = #{enprNo}
    </select>

</mapper>